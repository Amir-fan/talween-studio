
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // Users can create transaction documents, but cannot read/list them.
      // This prevents exposing transaction history to the client.
      match /transactions/{transactionId} {
        allow create: if request.auth != null && request.auth.uid == userId;
        allow read, list, update, delete: if false;
      }
    }

    // Users can only read/write their own stories.
    match /stories/{storyId} {
      allow read, write, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Story pages are readable if the user can read the parent story.
      match /pages/{pageId} {
         allow read: if get(/databases/$(database)/documents/stories/$(storyId)).data.userId == request.auth.uid;
         allow list, write, update, delete: if false;
      }
    }

    // Users can only read/write their own creations.
    match /creations/{creationId} {
      allow read, write, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
