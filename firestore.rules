rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == request.resource.data.uid;

      // Allow users to create transactions for themselves, but not read/list them.
      match /transactions/{transactionId} {
        allow create: if request.auth.uid == userId;
        allow read, write: if false; // Deny reads and writes by default on individual transaction docs
      }
    }

    match /stories/{storyId} {
      allow read, write, delete: if request.auth.uid == resource.data.userId;
      
      match /pages/{pageId} {
         allow read, write: if get(/databases/$(database)/documents/stories/$(storyId)).data.userId == request.auth.uid;
      }
    }

    match /creations/{creationId} {
        allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
