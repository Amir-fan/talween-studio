rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data.
    // No one can see the list of all users.
    match /users/{userId} {
      allow read, update, write: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      
      // Transaction history is private to the user
      match /transactions/{transactionId} {
        allow read, list, create: if request.auth.uid == userId;
      }
    }

    // Story data security
    match /stories/{storyId} {
      // Only the owner can create, read, or delete their story document
      allow read, delete, create: if request.auth.uid == resource.data.userId;
      
      // Allow public read for thumbnails in the library
      allow get: if request.auth != null;
      allow list: if request.auth != null; // Allow logged-in users to list stories for the library view

      // Pages can be read by anyone who has the storyId (publicly shared stories)
      match /pages/{pageId} {
        allow read: if true;
        // Only the owner of the story can write/delete pages
        allow write, delete: if get(/databases/$(database)/documents/stories/$(storyId)).data.userId == request.auth.uid;
      }
    }

    // Creations (single images) security
    match /creations/{creationId} {
        // Logged-in users can create new images.
        allow create: if request.auth != null;
        // Anyone can view the creations.
        allow read, list: if true;
        // Only the owner can delete their creation.
        allow delete: if request.auth.uid == resource.data.userId;
    }
  }
}
